{
    "env": {
        "browser": true,
        "commonjs": true,
        "es6": true,
        "mocha": true,
        "node": true
    },
    "extends": "eslint:recommended",
    "globals": {
        "Atomics": "readonly",
        "SharedArrayBuffer": "readonly"
    },
    "parserOptions": {
        "ecmaVersion": 2018
    },
    "rules": {
        "prefer-const": "error",
        "line-break-style": 0,
        "semi": [
            "error",
            "always"
        ],
        "no-console": [
            "warn",
            {
                "allow": [
                    "error"
                ]
            }
        ],
        "quotes": [
            "warn",
            "single"
        ],
        "no-unused-vars": [
            "warn"
        ]
    }
}