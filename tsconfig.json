{
    "compileOnSave": true,
    "compilerOptions": {
        "allowJs": true,
        "target": "es6",
        "checkJs": true,
        "noEmit": true,
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "esModuleInterop": true,
        "types": [
            "mocha",
            "chai",
            "node"
        ]
    },
    "include": [
        "**/*.js"
    ],
    "exclude": [
        "node_modules",
        "**/*.json"
    ]
}